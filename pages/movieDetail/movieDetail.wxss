.movie_detail_container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie_img{
  width: 70%;
  height: 700rpx;
  margin: 20rpx 0;
}

.movie_name{
  font-size: 40rpx;
  font-weight: bold;
}

.movie_info{
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  width: 70%;
}

button{
  width: 70%;
  height: 80rpx;
  background: green;
  color: #fff;
  line-height: 80rpx;
  margin-top: 50rpx;
}

