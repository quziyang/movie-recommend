<!--pages/list/list.wxml-->
<import src='/pages/template/list-template.wxml'/>
<view>
  <swiper catchtap='carouselToDetail' indicator-dots indicator-color='grey' indicator-active-color='green'>
    <swiper-item>
      <image data-swiperimg='0' src='/images/detail/carousel/01.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image data-swiperimg='1' src='/images/detail/carousel/02.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image data-swiperimg='2' src='/images/detail/carousel/03.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image data-swiperimg='3' src='/images/detail/carousel/04.jpg'></image>
    </swiper-item>
  </swiper>
  <block wx:for='{{list_arr}}' wx:key='index'>
    <view catchtap='toDetail' data-index='{{index}}'>
      <template is='listTem' data='{{...item}}'/>
    </view>
  </block>
  
</view>
